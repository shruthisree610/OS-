
#include <stdio.h>
#include <stdbool.h>

int findOptimal(int pages[], int frames[], int n, int m, int index) {
    int res = -1, farthest = index;
    for (int i = 0; i < m; i++) {
        int j;
        for (j = index; j < n; j++) {
            if (frames[i] == pages[j]) {
                if (j > farthest) {
                    farthest = j;
                    res = i;
                }
                break;
            }
        }
        if (j == n) // page not found in future
            return i;
    }
    return (res == -1) ? 0 : res;
}

bool isInFrames(int frames[], int m, int page) {
    for (int i = 0; i < m; i++)
        if (frames[i] == page)
            return true;
    return false;
}

int main() {
    int n, m;
    printf("Enter number of pages: ");
    scanf("%d", &n);

    int pages[n];
    printf("Enter page reference string:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    printf("Enter number of frames: ");
    scanf("%d", &m);

    int frames[m];
    for (int i = 0; i < m; i++)
        frames[i] = -1;  // initialize frames as empty

    int page_faults = 0;

    printf("\nPage replacement process:\n");
    for (int i = 0; i < n; i++) {
        if (!isInFrames(frames, m, pages[i])) {
            // Page fault occurs
            page_faults++;

            // Find empty frame
            int placed = 0;
            for (int j = 0; j < m; j++) {
                if (frames[j] == -1) {
                    frames[j] = pages[i];
                    placed = 1;
                    break;
                }
            }

            // If no empty frame, replace optimal page
            if (!placed) {
                int idx = findOptimal(pages, frames, n, m, i + 1);
                frames[idx] = pages[i];
            }

            printf("After inserting page %d: ", pages[i]);
            for (int k = 0; k < m; k++) {
                if (frames[k] != -1)
                    printf("%d ", frames[k]);
                else
                    printf("- ");
            }
            printf("\n");
        } else {
            printf("Page %d already in frame.\n", pages[i]);
        }
    }

    printf("\nTotal Page Faults = %d\n", page_faults);

    return 0;
}
